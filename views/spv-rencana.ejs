<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rencana Kerja - SPV</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container dashboard">
    <div class="header-section">
      <div>
        <h1 class="brand-title"><i class="fas fa-calendar-check text-primary"></i> Progres Pekerjaan</h1>
        <p class="welcome-msg">Status penugasan teknisi hari ini</p>
      </div>
      <button class="notification-badge" onclick="location.href='/spv'">
        <i class="fas fa-arrow-left"></i>
      </button>
    </div>

    <div id="rencanaList" class="task-list">
      <div style="text-align: center; padding: 40px; color: var(--text-secondary);">
        <i class="fas fa-circle-notch fa-spin fa-2x"></i>
        <p style="margin-top: 12px;">Memuat data...</p>
      </div>
    </div>
  </div>

  <!-- Reassign Modal -->
  <div id="reassignModal" class="modal">
    <div class="modal-content glass-card" style="border-radius: 32px; padding: 32px;">
      <div class="modal-header" style="border: none; margin-bottom: 24px;">
        <h2 style="font-weight: 800; color: var(--primary);"><i class="fas fa-user-gear"></i> Ganti Teknisi</h2>
        <span class="close" onclick="closeModal('reassign')">&times;</span>
      </div>
      <div class="modal-body">
        <div id="reassignTaskInfo" style="margin-bottom: 24px; padding: 16px; background: var(--primary-soft); border-radius: 16px; color: var(--primary); font-weight: 600; font-size: 0.9rem;"></div>
        <div id="reassignTeknisiList" class="tekniji-list" style="display: flex; flex-direction: column; gap: 12px;"></div>
        <div class="modal-actions" style="margin-top: 32px;">
          <button onclick="closeModal('reassign')" class="btn btn-secondary" style="width: 100%; padding: 16px; border-radius: 16px; font-weight: 700;">Batal</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav modern">
    <a href="/spv" class="nav-item" id="home-nav">
      <div class="nav-icon"><i class="fas fa-home"></i></div>
      <div class="nav-label">Home</div>
    </a>
    <a href="/spv/notifikasi" class="nav-item" id="notif-nav">
      <div class="nav-icon"><i class="fas fa-bell"></i></div>
      <div class="nav-label">Notifikasi</div>
    </a>
    <a href="/spv/profile" class="nav-item" id="profile-nav">
      <div class="nav-icon"><i class="fas fa-user-circle"></i></div>
      <div class="nav-label">Profile</div>
    </a>
  </nav>

  <script>
    let currentAssignmentId = null;

    function loadRencanaKerja() {
      fetch('/api/rencana-kerja')
        .then(response => response.json())
        .then(data => {
          const container = document.getElementById('rencanaList');
          if (data.length === 0) {
            container.innerHTML = `
              <div class="empty-state">
                <div class="empty-icon-wrapper">
                  <i class="fas fa-calendar-xmark"></i>
                </div>
                <p>Belum ada tugas yang diberikan hari ini.</p>
              </div>
            `;
            return;
          }

          let html = '';
          data.forEach(item => {
            const date = new Date(item.created_at).toLocaleString('id-ID', {
              day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit'
            });
            
            let statusClass = 'status-assigned';
            let statusLabel = item.status.toUpperCase();
            if (item.status === 'in_progress') statusClass = 'status-in_progress';
            if (item.status === 'pending') statusClass = 'status-pending';
            if (item.status === 'completed') statusClass = 'status-completed';

            html += `
              <div class="glass-card" style="padding: 24px; border-radius: 24px; margin-bottom: 16px;">
                <div class="plan-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
                  <div style="display: flex; gap: 12px; align-items: center;">
                    <div style="width: 48px; height: 48px; background: var(--primary-soft); color: var(--primary); border-radius: 14px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                      <i class="fas fa-user-gear"></i>
                    </div>
                    <div>
                      <div style="font-weight: 800; color: var(--text-main); font-size: 1.1rem;">${item.teknisi_name}</div>
                      <div style="font-size: 0.8rem; color: var(--text-secondary);">Penerima Tugas</div>
                    </div>
                  </div>
                  <span class="status-badge ${statusClass}" style="padding: 6px 12px; border-radius: 10px; font-size: 0.7rem; font-weight: 800; letter-spacing: 0.05em;">${statusLabel}</span>
                </div>
                
                <div style="background: var(--bg-main); padding: 16px; border-radius: 16px; margin-bottom: 16px; border: 1px solid var(--glass-border);">
                  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                    <div>
                      <label style="display: block; font-size: 0.7rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; margin-bottom: 4px;">Unit</label>
                      <div style="font-weight: 700; color: var(--primary);">${item.unit} (${item.alias})</div>
                    </div>
                    <div>
                      <label style="display: block; font-size: 0.7rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; margin-bottom: 4px;">Lokasi</label>
                      <div style="font-weight: 700;">${item.lantai}</div>
                    </div>
                  </div>
                </div>

                ${item.status === 'pending' ? `
                  <div style="margin-bottom: 16px; padding: 16px; background: #fff8e1; border-left: 4px solid #ffc107; border-radius: 8px;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                      <strong style="color: #856404; font-size: 0.85rem;"><i class="fas fa-exclamation-circle"></i> Alasan Pending:</strong>
                      <span style="font-size: 0.75rem; color: #856404; font-weight: 600;">
                        ${item.pending_at ? new Date(item.pending_at).toLocaleString('id-ID', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' }) : ''}
                      </span>
                    </div>
                    <div style="font-size: 0.9rem; color: #856404; line-height: 1.4;">${item.pending_reason || 'Tidak ada catatan.'}</div>
                  </div>
                ` : ''}

                <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 16px; border-top: 1px solid var(--glass-border);">
                  <div style="font-size: 0.75rem; color: var(--text-secondary);">
                    <div>Ditugaskan oleh: <strong>${item.spv_name}</strong></div>
                    <div style="margin-top: 2px;"><i class="fas fa-clock"></i> ${date}</div>
                  </div>
                  ${item.status !== 'completed' ? `
                    <button onclick="openReassignModal(${item.id}, '${item.unit}', '${item.teknisi_name}')" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.75rem; font-weight: 700; border-radius: 12px;">
                      <i class="fas fa-user-pen"></i> Ganti
                    </button>
                  ` : ''}
                </div>
              </div>
            `;
          });
          container.innerHTML = html;
        })
        .catch(err => {
          console.error('Error:', err);
          document.getElementById('rencanaList').innerHTML = `
            <div class="empty-state">
              <div class="empty-icon-wrapper" style="background: var(--danger-soft); color: var(--danger);">
                <i class="fas fa-triangle-exclamation"></i>
              </div>
              <p>Gagal memuat data penugasan.</p>
            </div>
          `;
        });
    }

    function openReassignModal(id, unit, currentTech) {
      currentAssignmentId = id;
      document.getElementById('reassignTaskInfo').innerHTML = `<i class="fas fa-info-circle"></i> Unit: ${unit}<br><span style="font-weight: 400; opacity: 0.8;">Teknisi saat ini: ${currentTech}</span>`;
      document.getElementById('reassignModal').style.display = 'block';
      loadReassignTeknisiList();
    }

    function closeModal(type) {
      document.getElementById(type + 'Modal').style.display = 'none';
    }

    function loadReassignTeknisiList() {
      fetch('/api/teknisi')
        .then(response => response.json())
        .then(data => {
          const list = document.getElementById('reassignTeknisiList');
          let html = '';
          data.forEach(tech => {
            html += `
              <div class="glass-card" style="padding: 16px; display: flex; justify-content: space-between; align-items: center; border-radius: 16px; background: var(--bg-main);">
                <div style="display: flex; gap: 12px; align-items: center;">
                  <div style="width: 32px; height: 32px; background: var(--primary-soft); color: var(--primary); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-user"></i>
                  </div>
                  <span style="font-weight: 700; color: var(--text-main);">${tech.user}</span>
                </div>
                <button onclick="submitReassign(${tech.id}, '${tech.user}')" class="btn btn-primary" style="padding: 8px 16px; font-size: 0.75rem; border-radius: 10px;">Pilih</button>
              </div>
            `;
          });
          list.innerHTML = html;
        });
    }

    function submitReassign(techId, techName) {
      if (!confirm(`Ganti teknisi ke ${techName}?`)) return;

      fetch('/api/reassign-task', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          assignment_id: currentAssignmentId,
          teknisi_id: techId
        })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Berhasil mengganti teknisi');
          closeModal('reassign');
          loadRencanaKerja();
        } else {
          alert('Gagal: ' + data.error);
        }
      });
    }

    loadRencanaKerja();
  </script>
</body>
</html>
