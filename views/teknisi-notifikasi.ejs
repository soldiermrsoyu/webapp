<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notifikasi - Teknisi</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container dashboard">
    <div class="header-section">
      <div>
        <h1 class="brand-title"><i class="fas fa-bell text-primary"></i> Notifikasi</h1>
        <p class="welcome-msg">Informasi terbaru untuk Anda</p>
      </div>
      <button class="notification-badge" onclick="location.href='/teknisi'">
        <i class="fas fa-arrow-left"></i>
      </button>
    </div>

    <div class="notif-list" id="notifList">
      <div class="empty-state">
        <div class="empty-icon-wrapper">
          <i class="fas fa-bell-slash"></i>
        </div>
        <p>Belum ada notifikasi baru.</p>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav modern">
    <a href="/teknisi" class="nav-item" id="home-nav">
      <div class="nav-icon"><i class="fas fa-home"></i></div>
      <div class="nav-label">Home</div>
    </a>
    <a href="/teknisi/notifikasi" class="nav-item active" id="notif-nav">
      <div class="nav-icon"><i class="fas fa-bell"></i></div>
      <div class="nav-label">Notifikasi</div>
    </a>
    <a href="/teknisi/profile" class="nav-item" id="profile-nav">
      <div class="nav-icon"><i class="fas fa-user-circle"></i></div>
      <div class="nav-label">Profile</div>
    </a>
  </nav>

  <script>
    const currentPage = window.location.pathname;
    document.querySelectorAll('.nav-item').forEach(item => {
      item.classList.remove('active');
    });
    
    if (currentPage === '/teknisi/notifikasi') {
      document.getElementById('notif-nav')?.classList.add('active');
    }
  </script>
</body>
</html>