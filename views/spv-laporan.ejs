<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Laporan Maintenance - SPV</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container dashboard">
    <div class="header-section">
      <div>
        <h1 class="brand-title"><i class="fas fa-file-contract text-primary"></i> Laporan Maintenance</h1>
        <p class="welcome-msg">Hasil kerja teknisi di lapangan</p>
      </div>
      <button class="notification-badge" onclick="location.href='/spv'">
        <i class="fas fa-arrow-left"></i>
      </button>
    </div>

    <div id="laporanList">
      <div style="text-align: center; padding: 40px; color: var(--text-secondary);">
        <i class="fas fa-circle-notch fa-spin fa-2x"></i>
        <p style="margin-top: 12px;">Memuat laporan...</p>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav modern">
    <a href="/spv" class="nav-item" id="home-nav">
      <div class="nav-icon"><i class="fas fa-home"></i></div>
      <div class="nav-label">Home</div>
    </a>
    <a href="/spv/notifikasi" class="nav-item" id="notif-nav">
      <div class="nav-icon"><i class="fas fa-bell"></i></div>
      <div class="nav-label">Notifikasi</div>
    </a>
    <a href="/spv/profile" class="nav-item" id="profile-nav">
      <div class="nav-icon"><i class="fas fa-user-circle"></i></div>
      <div class="nav-label">Profile</div>
    </a>
  </nav>

  <script>
    function loadLaporan() {
      fetch('/api/laporan-maintenance')
        .then(response => response.json())
        .then(data => {
          const container = document.getElementById('laporanList');
          if (data.length === 0) {
            container.innerHTML = `
              <div class="empty-state">
                <div class="empty-icon-wrapper">
                  <i class="fas fa-file-excel"></i>
                </div>
                <p>Belum ada laporan maintenance yang disubmit.</p>
              </div>
            `;
            return;
          }

          let html = '';
          data.forEach(item => {
            const dateDone = new Date(item.report_date).toLocaleString('id-ID', {
              day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit'
            });
            const nextDate = item.next_maintenance_date ? new Date(item.next_maintenance_date).toLocaleDateString('id-ID', {
              day: 'numeric', month: 'long', year: 'numeric'
            }) : 'Tidak dijadwalkan';

            html += `
              <div class="glass-card" style="padding: 24px; border-radius: 24px; margin-bottom: 20px;">
                <div class="report-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid var(--glass-border);">
                  <div>
                    <div style="font-weight: 800; font-size: 1.2rem; color: var(--primary);">${item.unit}</div>
                    <div style="font-size: 0.85rem; color: var(--text-secondary); margin-top: 4px;">
                      <i class="fas fa-map-marker-alt"></i> ${item.lantai} â€¢ ${item.alias}
                    </div>
                  </div>
                  <div class="status-badge" style="background: var(--success-soft); color: var(--success); padding: 6px 12px; border-radius: 12px; font-weight: 700; font-size: 0.75rem;">
                    <i class="fas fa-check-circle"></i> SELESAI
                  </div>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                  <div class="report-item">
                    <label style="display: block; font-size: 0.75rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 6px;">Temuan (Findings)</label>
                    <div style="font-size: 0.95rem; color: var(--text-main); line-height: 1.5;">${item.findings || '-'}</div>
                  </div>
                  <div class="report-item">
                    <label style="display: block; font-size: 0.75rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 6px;">Tindakan (Actions)</label>
                    <div style="font-size: 0.95rem; color: var(--text-main); line-height: 1.5;">${item.actions_taken || '-'}</div>
                  </div>
                  <div class="report-item">
                    <label style="display: block; font-size: 0.75rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 6px;">Teknisi</label>
                    <div style="font-size: 0.95rem; font-weight: 600; color: var(--text-main);"><i class="fas fa-user-gear"></i> ${item.teknisi_name}</div>
                  </div>
                  <div class="report-item">
                    <label style="display: block; font-size: 0.75rem; font-weight: 700; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 6px;">Jadwal Berikutnya</label>
                    <div style="font-size: 0.95rem; font-weight: 700; color: var(--primary);"><i class="fas fa-calendar-plus"></i> ${nextDate}</div>
                  </div>
                </div>
                
                <div style="margin-top: 20px; padding-top: 15px; border-top: 1px solid var(--glass-border); display: flex; justify-content: space-between; font-size: 0.75rem; color: var(--text-secondary);">
                  <span><i class="fas fa-hashtag"></i> ID: #${item.assignment_id}</span>
                  <span><i class="fas fa-clock"></i> ${dateDone}</span>
                </div>
              </div>
            `;
          });
          container.innerHTML = html;
        })
        .catch(err => {
          console.error('Error:', err);
          document.getElementById('laporanList').innerHTML = `
            <div class="empty-state">
              <div class="empty-icon-wrapper" style="background: var(--danger-soft); color: var(--danger);">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <p>Gagal memuat laporan maintenance.</p>
            </div>
          `;
        });
    }

    loadLaporan();
  </script>
</body>
</html>
